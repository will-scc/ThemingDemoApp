<Window x:Class="ThemingDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThemingDemoApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="400">
    <StackPanel>
        <Button x:Name="btnLightTheme"
                Content="Light Theme"
                Click="btnLightTheme_Click"
                Height="50"/>
        
        <Button x:Name="btnDarkTheme"
                Content="Dark Theme"
                Click="btnDarkTheme_Click"
                Height="50"/>

        <Label Content="A Label"
               Height="50"/>

        <GroupBox Header="A Group Box"
                  Height="50"/>

        <Expander Header="An Expander"
                  Height="50"/>
    </StackPanel>
</Window>
